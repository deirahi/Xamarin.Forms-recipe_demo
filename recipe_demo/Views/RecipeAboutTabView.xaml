<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="recipe_demo.Views.RecipeAboutTabView">
    <ContentView.Content>
        <StackLayout>
            <Label x:Name="recipeTitle"  FontSize="Title" />
            <Image x:Name="recipeImage"                                
                   HeightRequest="300"
                   Aspect="AspectFill"/>
            <Label Text="Explanation" TextColor="Olive" FontSize="Subtitle" />
            <Label x:Name="recipeExplanation"  FontSize="Body"/>
        </StackLayout>
    </ContentView.Content>
</ContentView>

