<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="recipe_demo.Views.RecipeStepsTabView">
    <ContentView.Content>
        <StackLayout>
            <Label Text="手順" FontSize="Title"/>
            <Line BackgroundColor="Gray" HeightRequest="5" Aspect="Fill"/>
            <CollectionView x:Name="StepsStack" >
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Label Text="{Binding StepDetails}"  FontSize="Large"/>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
        </StackLayout>
    </ContentView.Content>
</ContentView>
